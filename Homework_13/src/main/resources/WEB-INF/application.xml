<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="ru.otus.Server"/>

    <bean id="cache" class="ru.otus.Cache.CacheEngineImpl">
        <constructor-arg name="maxElements" value="5"/>
        <constructor-arg name="lifeTimeMs" value="5"/>
        <constructor-arg name="idleTimeMs" value="5"/>
        <constructor-arg name="isEternal" value="true"/>
    </bean>

    <bean id="dbService" class="ru.otus.DataBase.DBServiceHibernateImpl">
        <constructor-arg name="cache" value="cache"/>
    </bean>

</beans>